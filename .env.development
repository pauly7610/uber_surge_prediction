# GraphQL API Endpoints (local mock API)
REACT_APP_GRAPHQL_HTTP_URI=http://localhost:5000/graphql
REACT_APP_GRAPHQL_WS_URI=ws://localhost:5000/graphql/subscriptions

# Feature Flags
REACT_APP_ENABLE_NOTIFICATIONS=true
REACT_APP_ENABLE_PRICE_LOCK=true
REACT_APP_ENABLE_HEATMAP=true

# Map Configuration
REACT_APP_MAP_TILE_URL=https://api.mapbox.com/styles/v1/{id}/tiles/{z}/{x}/{y}?access_token={accessToken}
REACT_APP_MAPBOX_ACCESS_TOKEN=pk.mock.mapbox.token.for.development.only
REACT_APP_DEFAULT_MAP_CENTER=40.7128,-74.0060
REACT_APP_DEFAULT_MAP_ZOOM=12

# Application Settings
REACT_APP_DEFAULT_SURGE_ROUTE_ID=default-route-id
REACT_APP_PRICE_LOCK_DURATION=300
REACT_APP_VERSION=1.0.0

# Analytics
REACT_APP_GOOGLE_ANALYTICS_ID=UA-000000000-0

# Development Settings
REACT_APP_DEBUG_MODE=true 